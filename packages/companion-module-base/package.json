{
	"name": "@companion-module/base",
	"version": "2.0.0-0",
	"type": "module",
	"sideEffects": false,
	"license": "MIT",
	"repository": "https://github.com/bitfocus/companion-module-base",
	"exports": {
		".": {
			"import": "./dist/main.js",
			"require": "./dist/main.js"
		},
		"./manifest": {
			"import": "./dist/manifest.js",
			"require": "./dist/manifest.js"
		},
		"./host-api": {
			"import": "./dist/host-api/main.js",
			"require": "./dist/host-api/main.js"
		},
		"./package.json": {
			"import": "./package.json",
			"require": "./package.json"
		}
	},
	"scripts": {
		"docs:html": "run -BT typedoc --tsconfig tsconfig.json --entryPoints src/main.ts --excludePrivate --theme default --out docs"
	},
	"engines": {
		"node": "^18.20 || ^22.21"
	},
	"files": [
		"README.md",
		"CHANGELOG.md",
		"dist",
		"generated",
		"assets",
		"lib"
	],
	"dependencies": {
		"colord": "^2.9.3",
		"tslib": "^2.8.1"
	},
	"devDependencies": {
		"ajv": "^8.17.1"
	},
	"packageManager": "yarn@4.12.0"
}

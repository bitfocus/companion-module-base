{
	"name": "@companion-module/api",
	"license": "MIT",
	"private": true,
	"workspaces": [
		"packages/*"
	],
	"scripts": {
		"build": "run build:schema && run build:root",
		"build:clean": "(rm -rf ./packages/*/dist ./packages/*/generated ./packages/*/*.tsbuildinfo || true) && run build",
		"build:root": "tsc --build tsconfig.json",
		"build:schema": "cd packages/companion-module-base && node ./tools/schema-compile.mjs",
		"dev": "run build:root --watch",
		"lint": "eslint .",
		"unit": "vitest run",
		"unit:watch": "vitest"
	},
	"engines": {
		"node": "^22.20"
	},
	"devDependencies": {
		"@companion-module/tools": "^2.6.1",
		"@tsconfig/node22": "^22.0.5",
		"@types/node": "^22.19.7",
		"esbuild": "^0.27.2",
		"eslint": "^9.39.2",
		"json-schema-to-typescript": "^15.0.4",
		"prettier": "^3.8.1",
		"typedoc": "^0.28.16",
		"typescript": "~5.9.3",
		"typescript-eslint": "^8.54.0",
		"vitest": "^4.0.18",
		"vitest-mock-extended": "^3.1.0",
		"zx": "^8.8.5"
	},
	"packageManager": "yarn@4.12.0"
}

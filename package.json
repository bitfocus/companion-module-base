{
	"name": "@companion-module/base",
	"version": "1.12.1",
	"type": "commonjs",
	"main": "dist/index.js",
	"typings": "dist/index.d.ts",
	"license": "MIT",
	"repository": "https://github.com/bitfocus/companion-module-base",
	"scripts": {
		"dev": "yarn build:ts --watch",
		"build": "yarn build:json-schema && yarn build:ajv-validator && yarn build:ts",
		"build:ts": "tsc -p tsconfig.build.json",
		"build:json-schema": "json2ts --input assets/manifest.schema.json --output generated/manifest.d.ts --additionalProperties=false",
		"build:ajv-validator": "node tools/schema-compile.mjs",
		"docs:html": "typedoc --tsconfig tsconfig.build.json --entryPoints src/index.ts --excludePrivate --theme default --out docs",
		"lint:raw": "eslint",
		"lint": "yarn lint:raw .",
		"unit": "vitest"
	},
	"engines": {
		"node": "^18.12 || ^22.8"
	},
	"files": [
		"README.md",
		"CHANGELOG.md",
		"dist",
		"generated",
		"assets",
		"lib"
	],
	"dependencies": {
		"ajv": "^8.17.1",
		"colord": "^2.9.3",
		"ejson": "^2.2.3",
		"eventemitter3": "^5.0.1",
		"mimic-fn": "^3.1.0",
		"nanoid": "^3.3.11",
		"p-queue": "^6.6.2",
		"p-timeout": "^4.1.0",
		"slashes": "^3.0.12",
		"tslib": "^2.8.1"
	},
	"devDependencies": {
		"@companion-module/tools": "^2.3.0",
		"@tsconfig/node18": "^18.2.4",
		"@types/ejson": "^2.2.2",
		"@types/lodash-es": "^4",
		"@types/node": "^18.19.87",
		"eslint": "^9.25.1",
		"json-schema-to-typescript": "^15.0.4",
		"lodash-es": "^4.17.21",
		"prettier": "^3.5.3",
		"typedoc": "^0.27.9",
		"typescript": "~5.7.3",
		"typescript-eslint": "^8.31.1",
		"vitest": "^3.1.2",
		"vitest-mock-extended": "^3.1.0"
	},
	"packageManager": "yarn@4.9.1"
}

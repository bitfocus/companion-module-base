{
	"name": "@companion-module/base",
	"version": "1.4.3",
	"type": "commonjs",
	"main": "dist/index.js",
	"typings": "dist/index.d.ts",
	"license": "MIT",
	"repository": "https://github.com/bitfocus/companion-module-base",
	"scripts": {
		"build": "yarn build:json-schema && yarn build:ajv-validator && yarn build:ts",
		"build:ts": "tsc -p tsconfig.build.json",
		"build:json-schema": "json2ts --input assets/manifest.schema.json --output generated/manifest.d.ts",
		"build:ajv-validator": "ajv compile -s assets/manifest.schema.json -o generated/validate_manifest.js",
		"docs:html": "typedoc --tsconfig tsconfig.build.json --entryPoints src/index.ts --excludePrivate --theme default --out docs",
		"lint:raw": "eslint --ext .ts --ext .js",
		"lint": "yarn lint:raw .",
		"unit": "jest"
	},
	"engines": {
		"node": "^18.12"
	},
	"files": [
		"README.md",
		"CHANGELOG.md",
		"dist",
		"generated",
		"assets",
		"lib"
	],
	"dependencies": {
		"@sentry/node": "^7.63.0",
		"@sentry/tracing": "^7.63.0",
		"ajv": "^8.12.0",
		"ejson": "^2.2.3",
		"eventemitter3": "^4.0.7",
		"mimic-fn": "^3.0.0",
		"nanoid": "^3.3.4",
		"p-queue": "^6.6.2",
		"p-timeout": "^4.1.0",
		"tslib": "^2.6.1"
	},
	"devDependencies": {
		"@companion-module/tools": "^1.3.2",
		"@tsconfig/node18": "^1.0.1",
		"@types/ejson": "^2.2.0",
		"@types/jest": "^29.5.3",
		"@types/node": "^18.17.5",
		"ajv-cli": "^5.0.0",
		"jest": "^29.6.2",
		"json-schema-to-typescript": "^11.0.3",
		"prettier": "^2.8.8",
		"ts-jest": "^29.1.1",
		"typedoc": "^0.24.8",
		"typescript": "~4.8.4"
	}
}

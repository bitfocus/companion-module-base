{
	"extends": "@tsconfig/node22/tsconfig.json",
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules/**", "src/**/*spec.ts", "src/**/__tests__/*", "src/**/__mocks__/*"],
	"compilerOptions": {
		"outDir": "./dist",
		"baseUrl": "./",
		// "importHelpers": false,
		"paths": {
			"*": ["./node_modules/*"],
			"@companion/core-shared": ["../shared/src"]
		},
		"types": ["node"],
		"declaration": true,
		"declarationMap": true,

		"sourceMap": true,
		"importHelpers": true,
		"pretty": true,
		"esModuleInterop": true
	}
}
